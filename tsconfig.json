{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Modules */
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "moduleResolution": "node",            
    "resolveJsonModule": true,             

    /* Emit */
    "declaration": true,                   
    "sourceMap": true                      
  },
  "include": ["src"]                        
}
